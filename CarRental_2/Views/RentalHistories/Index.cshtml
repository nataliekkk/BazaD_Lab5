@model CarRental_2.ViewModels.RentalHistoryViewModel

@{
    ViewData["Title"] = "История аренды";
    Layout = "~/Views/Shared/_Layout.cshtml";

    bool hasFilters = (bool?)ViewBag.HasFilters ?? false;
    string filterTotalAmount = ViewBag.FilterTotalAmount?.ToString() ?? "Все суммы";
    int totalAllRecords = ViewBag.TotalAllRecords != null ? (int)ViewBag.TotalAllRecords : 0;
    string resetUrl = ViewBag.ResetUrl?.ToString() ?? "#";
    decimal totalAmount = Model?.TotalAmount ?? 0m;
    int filteredCount = Model?.PageViewModel?.TotalItems ?? 0;
}

<h2>История аренды</h2>

<p>
    <a href="~/RentalHistories/Create">Добавить историю аренды</a>
</p>

@using (Html.BeginForm("Index", "RentalHistories", FormMethod.Get))
{
    <fieldset>
        Стоимость аренды: @Html.TextBox("totalAmount", totalAmount)
        <input type="submit" value="Найти" />
    </fieldset>
}

@if (hasFilters)
{
    <div class="alert alert-info" style="margin: 10px 0; padding: 15px; border: 1px solid #31708f; background-color: #d9edf7; border-radius: 4px;">
        <strong>📋 Применены фильтры (восстановлены из куки):</strong><br />
        • Сумма аренды: <strong>@filterTotalAmount</strong><br />
        • Найдено записей: <strong>@filteredCount</strong> из <strong>@totalAllRecords</strong> (всего)<br />
        <small>Фильтры автоматически сохраняются в куки на 30 дней и восстанавливаются при повторном посещении страницы.</small><br />
        <a href="@resetUrl" class="btn btn-sm btn-warning">🔄 Сбросить фильтры</a>
    </div>
}
else
{
    <div class="alert alert-secondary" style="margin: 10px 0; padding: 10px;">
        <strong>👀 Показаны все записи</strong> (@filteredCount из @totalAllRecords).<br />
        <small>Задайте фильтр по стоимости аренды — значение сохранится в куки.</small>
    </div>
}

<p></p>
@if (Model?.RentalHistories != null && Model.RentalHistories.Any())
{
    <table class="table" border="1">
        <thead>
            <tr>
                <th style="display:none;">Код истории аренды</th>
                <th>Полное имя</th>
                <th>Водительское удостоверение</th>
                <th>Телефон</th>
                <th>Дата начала аренды</th>
                <th>Фактическая дата окончания аренды</th>
                <th>Стоимость аренды</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RentalHistories)
            {
                <tr>
                    <td style="display:none;">@item.RentalHistoryId</td>
                    <td>@item.FullName</td>
                    <td>@item.LicenseNumber</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.StartDateTime</td>
                    <td>@item.ActualEndDateTime</td>
                    <td>@item.TotalAmount</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RentalHistoryId">Редактировать</a> |
                        <a asp-action="Delete" asp-route-id="@item.RentalHistoryId">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Нет данных для отображения.</p>
}

@if (Model?.PageViewModel != null)
{
    <div>
        @if (Model.PageViewModel.HasPreviousPage)
        {
            <a href="@Url.Action("Index", "RentalHistories", new { totalAmount = totalAmount, page = Model.PageViewModel.Page - 1 })">Предыдущая</a>
        }

        @{
            int currentPage = Model.PageViewModel.Page;
            int totalPages = Model.PageViewModel.TotalPages;
            int startPage = Math.Max(1, currentPage - 2);
            int endPage = Math.Min(totalPages, currentPage + 2);
        }

        @for (int i = startPage; i <= endPage; i++)
        {
            if (i == currentPage)
            {
                <span><b>@i</b></span>
            }
            else
            {
                <a href="@Url.Action("Index", "RentalHistories", new { totalAmount = totalAmount, page = i })">@i</a>
            }
        }

        @if (Model.PageViewModel.HasNextPage)
        {
            <a href="@Url.Action("Index", "RentalHistories", new { totalAmount = totalAmount, page = Model.PageViewModel.Page + 1 })">Следующая</a>
        }
    </div>
}
<p></p>
<p><a href="~/RentalHistories/Index">Вернуться к списку</a></p>