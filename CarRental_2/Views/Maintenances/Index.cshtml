@model CarRental_2.ViewModels.MaintenanceViewModel

@{
    ViewData["Title"] = "Техническое обслуживание автомобилей";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal cost = Model.Cost;
}
}

<h2>Техническое обслуживание автомобилей</h2>

<p>
    <a href="~/Maintenances/Create">Добавить техобслуживание</a>
</p>

@using (Html.BeginForm("Index", "Maintenances", FormMethod.Get))
{
    <fieldset>
        Стоимость техобслуживания: @Html.TextBox("Cost", cost)
        <input type="submit" value="Найти" />
    </fieldset>
}

@if (ViewBag.HasFilters as bool? ?? false)
{
    <div class="alert alert-info" style="margin: 10px 0; padding: 15px; border: 1px solid #31708f; background-color: #d9edf7; border-radius: 4px;">
        <strong>📋 Применены фильтры (восстановлены из куки):</strong><br />
        • Стоимость: <strong>@ViewBag.FilterCost</strong><br />
        • Сортировка: <strong>@ViewBag.FilterSortOrder</strong><br />
        • Найдено записей: <strong>@Model.PageViewModel.TotalItems</strong> из <strong>@ViewBag.TotalAllRecords</strong> (всего)<br />
        <small>Фильтры автоматически сохраняются в куки на 30 дней и восстанавливаются при повторном посещении страницы.</small><br />
        <a href="@ViewBag.ResetUrl" class="btn btn-sm btn-warning">🔄 Сбросить фильтры</a>
    </div>
}
else
{
    <div class="alert alert-secondary" style="margin: 10px 0; padding: 10px;">
        <strong>👀 Показаны все записи</strong> (@Model.PageViewModel.TotalItems из @ViewBag.TotalAllRecords).<br />
        <small>Задайте фильтр по стоимости или сортировке — значения сохранятся в куки.</small>
    </div>
}

<p></p>
<table class="table" border="1">
    <thead>
        <tr>
            <th style="display:none;">Код обслуживания</th>
            <th>Марка</th>
            <th>Модель</th>
            <th>Дата обслуживания</th>
            <th>Вид обслуживания</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@Model.SortViewModel.CostSort"
                   asp-route-Cost="@cost">
                    @Html.DisplayNameFor(model => model.Maintenances.First().Cost)
                </a>
            </th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Maintenances)
        {
            <tr>
                <td style="display:none;">@item.Id</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaintenanceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p></p>
<div>
    @if (Model.PageViewModel.HasPreviousPage)
    {
        <a href="@Url.Action("Index", "Maintenances", new { cost = Model.Cost, sortOrder = Model.SortViewModel.SortOrder, page = Model.PageViewModel.Page - 1 })">Предыдущая</a>
    }

    @* Определяем диапазон для отображения ссылок *@
    @{
        int currentPage = Model.PageViewModel.Page;
        int totalPages = Model.PageViewModel.TotalPages;

        int startPage = Math.Max(1, currentPage - 2);
        int endPage = Math.Min(totalPages, currentPage + 2);
    }

    @* Отображаем страницы с учетом диапазона *@
    @for (int i = startPage; i <= endPage; i++)
    {
        if (i == currentPage)
        {
            <span><b>@i</b></span>
            // Текущая страница
        }
        else
        {
            <a href="@Url.Action("Index", "Maintenances", new { cost = Model.Cost, sortOrder = Model.SortViewModel.SortOrder, page = i })">@i</a>
        }
    }

    @if (Model.PageViewModel.HasNextPage)
    {
        <a href="@Url.Action("Index", "Maintenances", new { cost = Model.Cost, sortOrder = Model.SortViewModel.SortOrder, page = Model.PageViewModel.Page + 1 })">Следующая</a>
    }
</div>
<p></p>
<p><a href="~/Maintenances/Index">Вернуться к списку</a></p>