@model CarRental_2.ViewModels.ClientsViewModel

@{
    ViewData["Title"] = "Клиентура";
    Layout = "~/Views/Shared/_Layout.cshtml";

    bool hasFilters = (bool?)ViewBag.HasFilters ?? false;
    string filterPhoneNumber = ViewBag.FilterPhoneNumber?.ToString() ?? "Все телефоны";
    int totalAllRecords = ViewBag.TotalAllRecords != null ? (int)ViewBag.TotalAllRecords : 0;
    string resetUrl = ViewBag.ResetUrl?.ToString() ?? "#";
    string phoneNumber = Model?.PhoneNumber ?? "";
    int filteredCount = Model?.PageViewModel?.TotalItems ?? 0;
}

<h2>Список клиентов</h2>

<p>
    <a href="~/Clients/Create">Добавить клиента</a>
</p>

@using (Html.BeginForm("Index", "Clients", FormMethod.Get))
{
    <fieldset>
        Номер телефона: @Html.TextBox("PhoneNumber", phoneNumber)
        <input type="submit" value="Найти" />
    </fieldset>
}

@if (hasFilters)
{
    <div class="alert alert-info" style="margin: 10px 0; padding: 15px; border: 1px solid #31708f; background-color: #d9edf7; border-radius: 4px;">
        <strong>📋 Применены фильтры (восстановлены из куки):</strong><br />
        • Телефон: <strong>@filterPhoneNumber</strong><br />
        • Сортировка: <strong>@ViewBag.FilterSortOrder</strong><br />
        • Найдено записей: <strong>@filteredCount</strong> из <strong>@totalAllRecords</strong> (всего)<br />
        <small>Фильтры автоматически сохраняются в куки на 30 дней и восстанавливаются при повторном посещении страницы.</small><br />
        <a href="@resetUrl" class="btn btn-sm btn-warning">🔄 Сбросить фильтры</a>
    </div>
}
else
{
    <div class="alert alert-secondary" style="margin: 10px 0; padding: 10px;">
        <strong>👀 Показаны все записи</strong> (@filteredCount из @totalAllRecords).<br />
        <small>Задайте фильтр по телефону или сортировке — значения сохранятся в куки.</small>
    </div>
}

<p></p>
@if (Model?.Clients != null && Model.Clients.Any())
{
    <table class="table" border="1">
        <thead>
            <tr>
                <th style="display:none;">Код клиента</th>
                <th>Имя клиента</th>
                <th>Водительское удостоверение</th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@Model.SortViewModel.PhoneNumberSort" asp-route-PhoneNumber="@phoneNumber">
                        Телефон
                    </a>
                </th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model.Clients)
            {
                <tr>
                    <td style="display:none;">@client.ClientId</td>
                    <td>@client.FullName</td>
                    <td>@client.LicenseNumber</td>
                    <td>@client.PhoneNumber</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@client.ClientId">Редактировать</a> |
                        <a asp-action="Delete" asp-route-id="@client.ClientId">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Нет данных для отображения.</p>
}

@if (Model?.PageViewModel != null)
{
    <div>
        @if (Model.PageViewModel.HasPreviousPage)
        {
            <a href="@Url.Action("Index", "Clients", new { PhoneNumber = phoneNumber, sortOrder = Model.SortViewModel.SortOrder, page = Model.PageViewModel.Page - 1 })">Предыдущая</a>
        }

        @{
            int currentPage = Model.PageViewModel.Page;
            int totalPages = Model.PageViewModel.TotalPages;
            int startPage = Math.Max(1, currentPage - 2);
            int endPage = Math.Min(totalPages, currentPage + 2);
        }

        @for (int i = startPage; i <= endPage; i++)
        {
            if (i == currentPage)
            {
                <span><b>@i</b></span>
            }
            else
            {
                <a href="@Url.Action("Index", "Clients", new { PhoneNumber = phoneNumber, sortOrder = Model.SortViewModel.SortOrder, page = i })">@i</a>
            }
        }

        @if (Model.PageViewModel.HasNextPage)
        {
            <a href="@Url.Action("Index", "Clients", new { PhoneNumber = phoneNumber, sortOrder = Model.SortViewModel.SortOrder, page = Model.PageViewModel.Page + 1 })">Следующая</a>
        }
    </div>
}
<p></p>
<p><a href="~/Clients/Index">Вернуться к списку</a></p>