@model CarRental_2.ViewModels.CarClassViewModel

@{
    ViewData["Title"] = "Классы автомобилей";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    bool hasFilters = (bool?)ViewBag.HasFilters ?? false;
    string filterSearchName = ViewBag.FilterSearchName?.ToString() ?? "Все классы";
    int totalAllRecords = ViewBag.TotalAllRecords != null ? (int)ViewBag.TotalAllRecords : 0;
    string resetUrl = ViewBag.ResetUrl?.ToString() ?? "#";
    int filteredCount = Model?.CarClasses?.Count() ?? 0;
}

<h2>Список классов автомобилей</h2>

<p>
    <a href="~/CarsClass/Create">Добавить класс автомобиля</a>
</p>

@using (Html.BeginForm("Index", "CarsClass", FormMethod.Get))
{
    <fieldset>
        Наименование класса: @Html.TextBoxFor(m => m.SearchName)
        <input type="submit" value="Найти" />
    </fieldset>
}

@if ((bool?)ViewBag.HasFilters ?? false)
{
    <div class="alert alert-info" style="margin: 10px 0; padding: 15px; border: 1px solid #31708f; background-color: #d9edf7; border-radius: 4px;">
        <strong>📋 Применены фильтры (восстановлены из куки):</strong><br />
        • Наименование: <strong>@ViewBag.FilterSearchName</strong><br />
        • Найдено записей: <strong>@Model.CarClasses.Count()</strong> из <strong>@ViewBag.TotalAllRecords</strong> (всего)<br />
        <small>Фильтры автоматически сохраняются в куки на 30 дней и восстанавливаются при повторном посещении страницы.</small><br />
        <a href="@ViewBag.ResetUrl" class="btn btn-sm btn-warning">🔄 Сбросить фильтры</a>
    </div>
}
else
{
    <div class="alert alert-secondary" style="margin: 10px 0; padding: 10px;">
        <strong>👀 Показаны все записи</strong> (@Model.CarClasses.Count() из @ViewBag.TotalAllRecords).<br />
        <small>Задайте фильтр по наименованию — значение сохранится в куки.</small>
    </div>
}


<p></p>
@if (Model?.CarClasses != null)
{
    <table class="table" border="1">
        <thead>
            <tr>
                <th style="display:none;">Код класса автомобиля</th>
                <th>Наименование класса автомобиля</th>
                <th>Описание класса автомобиля</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var carclass in Model.CarClasses)
            {
                <tr>
                    <td style="display:none;">@carclass.CarClassId</td>
                    <td>@carclass.Name</td>
                    <td>@carclass.Description</td>
                    <td>
                        <a href="~/CarsClass/Edit/@carclass.CarClassId">Редактировать</a> |
                        <a href="~/CarsClass/Delete/@carclass.CarClassId">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Нет данных для отображения.</p>
}
<p></p>

@if (Model?.PageViewModel != null)
{
    <div>
        @if (Model.PageViewModel.HasPreviousPage)
        {
            <a href="@Url.Action("Index", "CarsClass", new { SearchName = Model.SearchName, page = Model.PageViewModel.Page - 1 })">Предыдущая</a>
        }

        @{
            int currentPage = Model.PageViewModel.Page;
            int totalPages = Model.PageViewModel.TotalPages;
            int startPage = Math.Max(1, currentPage - 2);
            int endPage = Math.Min(totalPages, currentPage + 2);
        }

        @for (int i = startPage; i <= endPage; i++)
        {
            if (i == currentPage)
            {
                <span><b>@i</b></span>
            }
            else
            {
                <a href="@Url.Action("Index", "CarsClass", new { SearchName = Model.SearchName, page = i })">@i</a>
            }
        }

        @if (Model.PageViewModel.HasNextPage)
        {
            <a href="@Url.Action("Index", "CarsClass", new { SearchName = Model.SearchName, page = Model.PageViewModel.Page + 1 })">Следующая</a>
        }
    </div>
}
<p></p>
<p><a href="~/CarsClass/Index">Вернуться к списку</a></p>
